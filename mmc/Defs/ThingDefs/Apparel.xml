<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<ThingDef Name="ApparelBase" Abstract="True">
		<thingClass>Apparel</thingClass>
		<category>Item</category>
		<selectable>True</selectable>
		<pathCost>10</pathCost>
		<useHitPoints>True</useHitPoints>
		<techLevel>Medieval</techLevel>
		<graphicData>
			<onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
		</graphicData>
		<drawGUIOverlay>true</drawGUIOverlay>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<DeteriorationRate>2</DeteriorationRate>
			<Beauty>-4</Beauty>
			<SellPriceFactor>0.70</SellPriceFactor>
		</statBases>
		<altitudeLayer>Item</altitudeLayer>
		<alwaysHaulable>True</alwaysHaulable>
		<tickerType>Never</tickerType>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
			<li>
				<compClass>CompColorable</compClass>
			</li>
			<li>
				<compClass>CompQuality</compClass>
			</li>
		</comps>
	</ThingDef>
	
	
	<ThingDef ParentName="ApparelBase">
		<defName>Apparel_SmallBackpack</defName>
		<label>Small Backpack</label>
		<techLevel>Industrial</techLevel>
		<description>A small backpack to make carry things more convinient.</description>
		<graphicData> 
			<texPath>Things/SmallBackpack/SmallBackpack</texPath>
			<graphicClass>Graphic_Single</graphicClass> 
		</graphicData>
		<statBases>
			<Insulation_Cold>3</Insulation_Cold>
			<Insulation_Heat>3</Insulation_Heat>
			<MaxHitPoints>120</MaxHitPoints>
			<WorkToMake>6000</WorkToMake>
			<Mass>2</Mass>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.05</MoveSpeed>
			<CarryingCapacity>75</CarryingCapacity>
		</equippedStatOffsets>
		<costStuffCount>40</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<costList>
			<Cloth>20</Cloth>
		</costList>
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<generateCommonality>2</generateCommonality>
		<apparel>
			<careIfWornByCorpse>false</careIfWornByCorpse>
			<tags>
				<li>Outlander</li>
			</tags>
			<defaultOutfitTags>
				<li>Worker</li>
				<li>Soldier</li>
			</defaultOutfitTags>
			<wornGraphicPath>Things/SmallBackpack/SmallBackpack</wornGraphicPath>
			<layers>
				<li>Accessory</li>
			</layers>
			<bodyPartGroups>
				<li>Shoulders</li>
				<li>Torso</li>
			</bodyPartGroups>
		</apparel>
		<recipeMaker>
			<workSpeedStat>TailoringSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Tailor</effectWorking>
			<soundWorking>Recipe_Tailor</soundWorking>
			<unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
			<recipeUsers>
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
			</recipeUsers>
		</recipeMaker>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>6</weight>
					<only>RGBA(0.2,0.2,0.2,1)</only>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>


